{
	"name": "Anime Release Notifier",
	"short_name": "Anime Notifier",
	"version": "1.0.0",
	"manifest_version": 2,
	"description": "Notifies you when there's a new episode of your favourite anime available.",
	"homepage_url": "https://animereleasenotifier.com/",
	"icons": {
		"16": "icons/icon16.png",
		"32": "icons/icon32.png",
		"48": "icons/icon48.png",
		"64": "icons/icon64.png",
		"128": "icons/icon128.png"
	},
	"background": {
		"page": "html/background.html",
		"persistent": true
	},
	"options_page": "options/index.html",
	"content_security_policy":"script-src 'self' https://animereleasenotifier.com; object-src 'self'",
	"permissions": [
		"background",
		"notifications",
		"https://animereleasenotifier.com/",
		"http://www.anime-planet.com/",
		"http://anilist.co/",
		"https://static.hummingbird.me/",
		"http://myanimelist.net/"
	],
	"browser_action": {
		"default_icon": "icons/icon128.png",
		"default_popup": "html/anime.html"
	}
}